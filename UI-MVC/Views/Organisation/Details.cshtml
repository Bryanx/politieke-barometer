@using System.Web.Optimization
@using BAR.BL.Domain.Items
@model BAR.UI.MVC.Models.ItemViewModels.OrganisationViewModel

@{
    ViewBag.Title = Model.PageTitle;
}

@section CustomCSS{
    <link rel="stylesheet" href="../../Content/build/css/vendor/gridstack.css"/>
}

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="clearfix"></div>
            <div class="x_content">
                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                    <div class="profile_img">
                        <div id="crop-avatar">
                            <!-- Current avatar -->
                            <img class="img-responsive avatar-view" src="../../Content/build/images/picture.jpg" alt="Avatar" title="Change the avatar">
                        </div>
                    </div>

                </div>
                <div class="col-md-9 col-sm-9 col-xs-12">
                    @Resources.Organisation
                    <h1>
                        @Model.Person.Name
                        @if (User.Identity.IsAuthenticated) {
                            if (Model.Subscribed != true) {
                                <a class="w-100px subscribeItem btn btn-success pull-right" data-item-id="@Model.Person.ItemId" title="Deze persoon volgen">@Resources.Subscribe</a>
                            } else {
                                <a class="w-100px subscribeItem btn btn-danger pull-right" data-item-id="@Model.Person.ItemId" title="Uitschrijven">@Resources.Unsubscribe</a>
                            }
                        }
                    </h1>
                    <hr/>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <h4>
                        <strong>@Resources.Organisation @Resources.Details</strong>
                    </h4>
                    <ul class="list-unstyled user_data">
                        <li class="m-top-xs">
                            <i class="fa fa-globe external-link user-profile-icon"></i>
                            <a href="@Model.Site" target="_blank">@Model.Site</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <h4>
                        <strong>@Resources.SocialMedia</strong>
                    </h4>
                    @foreach (var item in Model.SocialMediaNames) {
                        if (item.Source.SourceId == 1) {
                            if (item.Username != null) {
                                <a href="http://www.twitter.com/@item.Username" class="social-icon" aria-label="Twitter">
                                    <i class="fa fa-2x fa-twitter-square"></i>
                                </a>
                            }
                        }
                        if (item.Source.SourceId == 2) {
                            if (item.Username != null) {
                                <a href="@item.Username" class="social-icon" aria-label="Facebook">
                                    <i class="fa fa-2x fa-facebook-square"></i>
                                </a>
                            }
                        }
                    }
                </div>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <h4>
                        <strong>@Resources.NumberOfMentions</strong>
                    </h4>
                    <h1>
                        <strong class="totalNumberOfMentions"></strong>
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Widgets -->
<div class="grid-stack" id="grid"></div>

@Html.Partial("Partials/_SocialIcons")
@section CustomJS{
    <script src="~/Scripts/ChartJS/Chart.js"></script>
    @Scripts.Render("~/bundles/gridstack")
    <script type="text/javascript" defer>

        $('.subscribeItem').click(function() {
            ajaxToggleSubscribe($(this));
        });

        function loadNumberOfMentions() {
            $.ajax({
                method: "GET",
                url: "/api/GetNumberOfMentions/" + @Model.Person.ItemId,
                success: data => $(".totalNumberOfMentions").html(data)
            });
        }

        (() => {
            loadWidgets("/api/GetItemWidgets/", @Model.Person.ItemId);
            loadNumberOfMentions();
        })(jQuery);

    </script>
}

