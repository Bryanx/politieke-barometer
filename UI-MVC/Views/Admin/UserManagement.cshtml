@using System.Web.Optimization
@model BAR.UI.MVC.Models.EditUserViewModel

@section CustomCSS{
    @Styles.Render("~/bundles/datatables")
}

<h1>@Model.PageTitle</h1>
<hr />
@Html.Partial("Partials/_UserTable", Model)
<div style="visibility: hidden">space</div>

@section CustomJS{
    @Scripts.Render("~/bundles/datatablesScripts")
    <script type="text/javascript">
        function deactivateAccount(id, htmlId) {
            $.ajax({
                type: 'POST',
                url: '/api/Admin/DeactivateAccount/' + id
            }).fail(() => {/* ok */ })
                .done(function () {
                    alert(htmlId);
                    $("#htmlId").removeClass("btn-danger");
                    $("#htmlId").addClass("btn-success");
                    $("#htmlId").text("Herstellen");
                });
            event.preventDefault();
        }
        function activateAccount(id, htmlId) {
            $.ajax({
                type: 'POST',
                url: '/api/Admin/ActivateAccount/' + id
            }).fail(() => {/* ok */ }).done(function () {
                alert(htmlId);
                $("#htmlId").removeClass("btn-success");
                $("#htmlId").addClass("btn-danger");
                $("#htmlId").text("Verwijderen");
            });
            event.preventDefault();
        }
    </script>
}