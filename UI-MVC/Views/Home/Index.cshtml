}
<link href="../../Content/build/css/homepage.css" rel="stylesheet">

<!-- header start -->
<div class="main-header-container-parent row header-image-bg">
    <div class="col-md-12 col-sm-12 col-xs-12 main-header-container">
        <div class="logo"></div>
        <div class="main-header">
            <h1 class="main-header-title">Bekijk welke <span class="underline">politici</span> trending zijn<br/>op social media.
                </h1>
        </div>
        @Html.Partial("Partials/SearchBar")
    </div>
</div>
<!-- header end -->
<a name="nieuws"></a>
<div class="right_col" role="main">
<!-- top tiles -->
<div class="row tile_count">
    @{ int i = 0;}
    @foreach (var item in Model.People) {
        if (i < 6) {
            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                <span class="count_top"><i class="fa fa-user"></i> @item.Name</span>
                <div class="count">123.50</div>
                <span class="count_bottom">
                    <i class="green">
                        <i
                            class="fa fa-sort-asc">
                        </i>@item.TrendingPercentage%
                    </i> Sinds vorige week
                </span>
            </div>
            i++;
        }
    }
</div>
<!-- /top tiles -->
<div class="row">

<div class="col-md-8 col-sm-8 col-xs-12">
    <div class="x_panel tile fixed_height_320">
        <div class="x_title">
            <h2>Top 5 politici</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                       aria-expanded="false">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link">
                        <i class="fa fa-close"></i>
                    </a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <p><strong>Aantal vermeldingen van politici op social media</strong></p>
            @{ int j = 1;}
            <table>
            @foreach (var item in Model.People.OrderByDescending(m => m.TrendingPercentage)) {
                if (j <= 5) {
                    <tr>
                        <div class="widget_summary">
                            <div class="w_left w_25">
                                <span style="display: inline" class="badge bg-green">@j</span>
                                <h4>@item.Name</h4>
                            </div>
                            <div class="w_center w_55">
                                <div class="progress">
                                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@item.TrendingPercentage"
                                         aria-valuemin="0" aria-valuemax="@Model.People.Max(m => m.TrendingPercentage)" style="width: @(item.TrendingPercentage*3)%;">
                                        <span class="sr-only">@item.TrendingPercentage% Complete</span>
                                    </div>
                                </div>
                            </div>
                            <div class="w_right w_20">
                                <span>@item.TrendingPercentage%</span>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </tr>
                    j++;
                }
            }
            </table>
        </div>
    </div>
</div>


