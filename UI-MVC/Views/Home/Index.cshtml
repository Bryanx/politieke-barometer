    <script type="text/javascript">
        $(window).scroll(() => {
            //After scrolling 100px from the top...
            if ($(window).scrollTop() >= 100) {
                $('.left_col').css('left', '0');
            } else {
                $('.left_col').css('left', '-100px');
            }
        });

        (() => $('.search-field').focus())($);
    </script>
