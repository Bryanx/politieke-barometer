@model BAR.UI.MVC.Models.EditUserViewModel

<table id="datatable-responsive" class="table" cellspacing="10px" width="100%">

    <colgroup>
        <col style="width:11%">
        <col style="width:11%">
        <col style="width:12%">
        <col style="width:12%">
        <col style="width:16%">
        <col style="width:10%">
        <col style="width:8%">
        <col style="width:8%">
        <col style="width:12%">
    </colgroup>
    <thead>
        <tr>
            <th>
                Voornaam
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Geslacht
            </th>
            <th>
                Geboortedatum
            </th>
            <th>
                Email
            </th>
            <th>
                Status
            </th>
            <th>
            </th>
            <th>
                Rol
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Users.Count(); i++)
        {
        <tr class="subscription">
            <td>
                <div class="img-circle person-image"></div>
                @Model.Users.ElementAt(i).FirstName
            </td>
            <td>
                @Model.Users.ElementAt(i).LastName
            </td>
            @if (Model.Users.ElementAt(i).Gender == BAR.BL.Domain.Users.Gender.MAN)
            {
            <td>
                Man
            </td>
            }
            else if (Model.Users.ElementAt(i).Gender == BAR.BL.Domain.Users.Gender.WOMAN)
            {
            <td>
                Vrouw
            </td>
            }
            else
            {
            <td>
                Iets anders
            </td>
            }
            <td>
                @Model.Users.ElementAt(i).DateOfBirth.Value.ToShortDateString()
            </td>
            <td>
                @Model.Users.ElementAt(i).Email
            </td>
            @if (Model.Users.ElementAt(i).Deleted)
            {
            <td class="red">
                Non-actief
            </td>
            }
            else
            {
            <td class="green">
                Actief
            </td>
            }
            <td>
                @if (Model.Users.ElementAt(i).Deleted)
                {
                <a class="btn btn-success btn-xs" onclick="activateAccount(@Model.Users.ElementAt(i).Id)" title="Verwijderde gebruiker herstellen">Herstellen</a>
                }
                else
                {
                <a class="btn btn-danger btn-xs" onclick="deactivateAccount(@Model.Users.ElementAt(i).Id)" title="Gebruiker verwijderen">Verwijderen</a>
                }
            </td>
            <td>
                @ViewBag.CurrentRoles[i]
            </td>
            <td>
                @Html.DropDownListFor(model => model.User.Roles, Model.Roles, "Verander rol")
            </td>
        </tr>
        }
    </tbody>
</table>