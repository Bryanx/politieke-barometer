@using BAR.UI.MVC.Controllers
@using BAR.UI.MVC.Helpers
@model BAR.UI.MVC.Models.BaseViewModel

@Html.FooterHelper(Model)
<footer>
    <div class="margin-aligned">
        <div class="col-md-3 col-sm-3 col-xs-12">
            <ul>
                <li>
                    <a href='@Url.RootUrl()'>
                        <i class="small-logo colored"></i>
                    </a>
                </li>
                <li>
                    &copy; @DateTime.Now.Year - Barometer
                </li>
                <li>
                    <button href="mailto:@Model.ContactEmail" class="btn btn-default">Email ons</button>
                </li>
            </ul>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
            <h4>Links</h4>
            <ul>
                <li>
                    <a href='@Url.RootUrl()'>Home</a>
                </li>
                <li>
                    <a href='@Url.DashboardUrl()'>Dashboard</a>
                </li>
                <li>
                    <a href='@Url.PersonUrl()'>Politici</a>
                </li>
                <li>
                    <a href='@Url.OrganisationUrl()'>Partijen</a>
                </li>
            </ul>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
            <h4>Meer info</h4>
            <ul>
                <li>
                    <a href='#'>Login/Signup</a>
                </li>
                <li>
                    <a href='@Url.FaqUrl()'>Vraag en antwoord</a>
                </li>
                <li>
                    <a href='@Url.PrivacyUrl()'>Privacy</a>
                </li>
            </ul>
        </div>
        <div class="col-md-3 col-sm-3 col-xs-12">
            <h4>Contact</h4>
            <ul>
                <li>
                    @Model.ContactStreet
                </li>
                <li>
                    @Model.ContactCity
                </li>
            </ul>
        </div>
    </div>
    <div class="clearfix"></div>
</footer>
<footer class="copyright">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="pull-right">
            &copy; @DateTime.Now.Year - Politieke Barometer
        </div>
    </div>
</footer>