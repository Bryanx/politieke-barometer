@model BAR.UI.MVC.Models.EditUserViewModel

<table id="datatable-responsive" class="table" cellspacing="10px" width="100%">

    <colgroup>
        <col style="width: 40px;">
        <col style="width: 11%">
        <col style="width: 11%">
        <col style="width: 12%">
        <col style="width: 12%">
        <col style="width: 16%">
        <col style="width: 8%">
        <col style="width: 8%">
        <col style="width: 12%">
    </colgroup>
    <thead>
        <tr>
            <th>
                Foto
            </th>
            <th>
                Voornaam
            </th>
            <th>
                Achternaam
            </th>
            <th>
                Geslacht
            </th>
            <th>
                Geboortedatum
            </th>
            <th>
                Email
            </th>
            <th>
            </th>
            <th>
                Rol
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Users.Count(); i++)
        {
            if (@ViewBag.CurrentRoles[i] == "Admin") {
                <tr class="subscription @(@Model.Users.ElementAt(i).Deleted ? "greyed-out" : "")">
                    <td>
                        <div class="img-circle person-image"></div>
                    </td>
                    <td>
                        @Model.Users.ElementAt(i).FirstName
                    </td>
                    <td>
                        @Model.Users.ElementAt(i).LastName
                    </td>
                    @if (Model.Users.ElementAt(i).Gender == BAR.BL.Domain.Users.Gender.MAN) {
                        <td>
                            Man
                        </td>
                    } else if (Model.Users.ElementAt(i).Gender == BAR.BL.Domain.Users.Gender.WOMAN) {
                        <td>
                            Vrouw
                        </td>
                    } else {
                        <td>
                            Iets anders
                        </td>
                    }
                    @if (Model.Users.ElementAt(i).DateOfBirth != null) {
                        <td>
                            @Model.Users.ElementAt(i).DateOfBirth.Value.ToShortDateString()
                        </td>
                    } else {
                        <td>
                            N/B
                        </td>
                    }
                    <td>
                        @Model.Users.ElementAt(i).Email
                    </td>
                    <td>
                        @if (Model.Users.ElementAt(i).Deleted) {
                            <a class="accountActivityChange btn btn-success btn-xs" data-item-id="@Model.Users.ElementAt(i).Id" title="Verwijderde gebruiker herstellen">Herstellen</a>
                        } else {
                            <a class="accountActivityChange btn btn-danger btn-xs" data-item-id="@Model.Users.ElementAt(i).Id" title="Gebruiker verwijderen">Verwijderen</a>
                        }
                    </td>
                    <td id=@String.Format("td2{0}", i)>
                        @ViewBag.CurrentRoles[i]
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model.User.Roles, Model.AdminRoles, "Verander rol", new {@class = "form-control input-sm", @onchange = $"changeRole('{Model.Users.ElementAt(i).Id}', '{i}')", id = $"dd{i}"})
                    </td>
                </tr>
            }
        }
    </tbody>
</table>