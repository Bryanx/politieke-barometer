@model BAR.UI.MVC.Models.PersonDTO

<tr onclick="location.href = '@(Url.Action("Details", "Person", new {id = Model.ItemId}))'">
    <td>
        @Html.DisplayFor(modelItem => Model.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.NumberOfMentions)
    </td>
    <td class="green">
        @Html.DisplayFor(modelItem => Model.NumberOfMentions)
        <i class="glyphicon glyphicon-arrow-up"></i>
    </td>
    <td class="red">
        @Html.DisplayFor(modelItem => Model.NumberOfMentions)
        <i class="glyphicon glyphicon-arrow-down"></i>
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.TrendingPercentage) %
    </td>
</tr>